<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.onboarding.photos.PhotosBottomSheetDialogFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/changePhoto"
        style="@style/BottomSheetItem"
        android:drawableStart="@drawable/ic_baseline_edit_24"
        android:text="Cambiar foto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/removePhoto"
        style="@style/BottomSheetItem"
        android:drawableStart="@drawable/ic_baseline_close_24"
        android:text="Quitar foto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePhoto" />


</androidx.constraintlayout.widget.ConstraintLayout>